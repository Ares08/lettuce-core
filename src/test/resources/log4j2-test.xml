<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5p] [%t] %m (%c{1}:%L)%n"/>
            <ThresholdFilter level="DEBUG"/>
        </Console>

        <File name="File" fileName="target/lettuce.log" bufferedIO="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5p] [%t] %m (%c{1}:%L)%n"/>
            <ThresholdFilter level="FATAL"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="io.netty" level="WARN"/>
        <Logger name="com.lambdaworks.redis" level="WARN"/>
        <Logger name="com.lambdaworks.redis.cluster" level="WARN"/>
        <Logger name="com.lambdaworks.redis.protocol" level="WARN"/>
        <Logger name="com.lambdaworks.redis.protocol.ConnectionWatchdog" level="DEBUG" appender="Console"/>
        <Root level="FATAL">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>

</Configuration>
